<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.Principal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:text="@string/ajustes"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:layout_marginTop="116dp"
        android:text="@string/cambiar_correo_electr_nico"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:text="@string/cambiar_contra"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0.5"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/cambiarMedidas"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:text="@string/cambiar_medidas"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0.5"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CerrarSesion"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:text="@string/cerrar_sesi_n"
        app:cornerRadius="4dp"
        android:backgroundTint="#DA3B2F"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cambiarMedidas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0.5"/>

    <Switch
        android:id="@+id/switchTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modo_claro_oscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CerrarSesion"
        app:layout_constraintVertical_bias="0.528"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</androidx.constraintlayout.widget.ConstraintLayout>
